{
  "name": "admin-ui-submodule",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./client": "./src/client/index.js",
    "./server": "./src/server/index.js",
    "./auth": "./src/server/services/authService.js",
    "./mfa": "./src/server/services/mfaService.js",
    "./rbac": "./src/server/services/rbacService.js",
    "./middleware": "./src/server/middleware/index.js",
    "./models": "./src/server/models/index.js",
    "./routes": "./src/server/routes/index.js",
    "./utils": "./src/server/utils/index.js"
  },
  "workspaces": [
    "src/client",
    "src/server"
  ],
  "scripts": {
    "dev": "npm run dev:standalone",
    "dev:standalone": "cd src/server && npm run standalone",
    "dev:standalone:prod": "cd src/server && npm run standalone:prod",
    "start": "npm run start:standalone",
    "start:standalone": "cd src/server && npm run standalone:prod",
    "build": "npm run build:client",
    "build:client": "cd src/client && npm run build",
    "build:standalone": "cd src/server && node scripts/build-client.js",
    "build:client:standalone": "cd src/server && node scripts/build-client.js",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd src/server && npm run lint",
    "lint:client": "cd src/client && npm run lint",
    "lint:fix": "npm run lint:fix:server && npm run lint:fix:client",
    "lint:fix:server": "cd src/server && npm run lint:fix",
    "lint:fix:client": "cd src/client && npm run lint:fix",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd src/server && npm test",
    "test:client": "cd src/client && npm test",
    "install:all": "npm install && cd src/server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules src/client/node_modules src/server/node_modules package-lock.json",
    "clean:all": "npm run clean && cd sample-app && npm run clean && cd ..",
    "migrate": "cd src/server && npm run migrate",
    "migrate:status": "cd src/server && npm run migrate:status",
    "migrate:rollback": "cd src/server && npm run migrate:rollback",
    "migrate:reset": "cd src/server && npm run migrate:reset",
    "create-migration": "cd src/server && npm run create-migration",
    "sample-app:dev": "cd sample-app && npm run dev",
    "sample-app:start": "cd sample-app && npm run start",
    "sample-app:build": "cd sample-app && npm run build:standalone"
  },
  "devDependencies": {},
  "description": "Admin UI Submodule - Full-stack application with Vue.js frontend and Node.js backend that can be imported as a submodule",
  "_moduleAliases": {
    "@admin-ui": ".",
    "@admin-ui/client": "./src/client",
    "@admin-ui/server": "./src/server",
    "@admin-ui/auth": "./src/server/services/authService.js",
    "@admin-ui/mfa": "./src/server/services/mfaService.js",
    "@admin-ui/rbac": "./src/server/services/rbacService.js",
    "@admin-ui/middleware": "./src/server/middleware",
    "@admin-ui/models": "./src/server/models",
    "@admin-ui/routes": "./src/server/routes",
    "@admin-ui/config": "./src/server/config",
    "@admin-ui/utils": "./src/server/utils"
  }
}
